<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/icons"
    android:orientation="vertical"
    tools:context=".fragments.WalletFragment"
    android:padding="15dp">

    <TextView
        android:id="@+id/title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:text="Available Balance"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/credits"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/title_label"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_credits"
        android:gravity="center"
        android:text="INR 25"
        android:textColor="@color/primary_text"
        android:textSize="35sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/priceLayout1"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/credits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/priceLayout2"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/priceLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/priceLayout3"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/priceLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>

    <Button
        android:id="@+id/btnAddMoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/accent"
        android:text="@string/add_money"
        android:textAllCaps="true"
        android:textColor="@color/icons"
        android:textSize="18sp" />

</RelativeLayout>
